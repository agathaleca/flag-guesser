            }
        }, 100);
        */
        var temp = width.concat(temps);
        var temp = temp.concat('%');
        console.log(temp);
        bar.style = temp;
        if (temps<=0) {
            clearInterval(interval);
            reroute();
            }
    }, 1000);
    
</script>
{% endblock %}
