{% extends 'base.html.twig' %}

{% block title %}Recap{% endblock %}

{% block body %}

    <h1>Résultats du quiz #{{ id_game }}</h1>
    <h2><b>Score : {{ game_score }}</b></h2>

    {% for question in question_list %}

        <div style="background-color:lightblue;border-radius:10px 10px 10px 10px;">
            <div style="width:30%;margin-left: auto;margin-right: auto;padding:20px;margin-top:10px">
                <img class="img-fluid" src="https://flagcdn.com/{{ question.getFlag().getIso() }}.svg">
            </div>
            <br>
            <h2>Score : {{ question.getScore() }}</h2>
            <br>
            Votre réponse : {{ question.getPlayerAnswer() }}
            <br>
            La bonne réponse était : {{ question.getFlag().getNomFr() }}
            <br><br>
        </div>
    
    {% endfor %}

{% endblock %}