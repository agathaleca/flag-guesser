{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
  .carousel-fade .carousel-item, .carousel-item img  {
  height: 60vh;
}

  #nom {
    background-color: rgba(100, 100, 100, 0.5);
    border: 1px;
    border-radius: 10px;
  }
</style>

<h1>{%trans%}Bienvenue sur le site !{%endtrans%}</h1>

<div id="carouselExampleSlidesOnly" class="carousel slide m-5" data-bs-ride="carousel">
  <div class="carousel-inner">
    {% set n = 1 %}
    {% for flag in flags %}
    {% if n == 1 %}
    <div class="carousel-item active" data-bs-interval="3500">
      <img src="https://flagcdn.com/{{ flag.getIso() }}.svg" class="img-fluid">
      <div class="carousel-caption d-none d-md-block">
        {%if app.request.getLocale() is same as('fr')%}
        <span id='nom' class="display-4 highlight">{{flag.getNomFr() | upper}}</span>
        {%else%}
        <span id='nom' class="display-4 highlight">{{flag.getNomEn() | upper}}</span>
        {%endif%}
      </div>
    </div>
    {% else %}
    <div class="carousel-item" data-bs-interval="3500">
      <img src="https://flagcdn.com/{{ flag.getIso() }}.svg" class="img-fluid">
      <div class="carousel-caption d-none d-md-block" style='text-align: center;'>
        {%if app.request.getLocale() is same as('fr')%}
        <span id='nom' class="display-4 highlight">{{flag.getNomFr() | upper}}</span>
        {%else%}
        <span id='nom' class="display-4 highlight">{{flag.getNomEn() | upper}}</span>
        {%endif%}
      </div>
    </div>

    {% endif %}
    {% set n = n + 1 %}
    {% endfor %}
  </div>

  
  <div style="margin-top:30px;box-shadow:0px 0px 4px;padding:10px;font-size:24px; background-color:lightblue;width:70%;margin-right:auto;margin-left:auto;border-radius : 10px 10px 10px 10px;">
      <p>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
      </svg><br>
      Répondez le plus rapidement possible à <b>10 questions</b></p>
      <hr>
      <p> 
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
